class Tile

	instance variables
		private shape : seq of Utilities`Pos := [];
		private maxSize:nat1 := 1;
		private maxY:nat1 := 0;
		private newMaxSize:nat1 := 0;
		private newMaxY:nat1 := 0;
		
	operations
        public rotate:() ==> seq of Utilities`Pos
        rotate() ==
        (
        	dcl newShape: seq of Utilities`Pos := [];
        	
        	for all s in set elems shape do
                if s.y > MaxY
                then newMaxY := s.y
                newShape := newShape ^ [mk_Utilities`Pos( s.y, 1-(s.x - (maxSize-2) ) )]
                ;
            
            return newShape
        );
        
end Tile